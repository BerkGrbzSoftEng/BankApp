@model BankaOtomasyon.Models.GirisModel
@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
 

<div class="limiter">
    <div class="container-login100" style="background-image: url('/Content/Uyelik/images/bg-01.jpg');">
        <div class="wrap-login100 p-t-30 p-b-50">
            <span class="login100-form-title p-b-41">
                GİRİŞ YAP
            </span>

            <form class="login100-form validate-form p-b-33 p-t-5" action="" method="post">
                @Html.AntiForgeryToken()
                @if (ViewBag.message != null)
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.message
                        <hr />
                        Hoşgeldiniz @Session["mstAd"] - @Session["mstEmail"]
                        <a href="/Uyelik/Cikis">Çıkış</a>
                    </div>
                }
                @if (ViewBag.errormessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.errormessage

                    </div>
                }
                <div class="wrap-input100 validate-input" data-validate="TCKN Giriniz!">
                    @Html.TextBoxFor(i => i.TCKN, new { @class = "input100", @type = "text", @maxlength = "11", @name = "TCKN", @placeholder = "TCKN ", @onkeypress = "return event.charCode>= 48 &&event.charCode<= 57" })
                    <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Sifre Giriniz!">
                    @Html.TextBoxFor(i => i.Sifre, new { @class = "input100", @type = "password", @name = "sifre", @placeholder = "Sifre" })
                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                </div>

                <div class="container-login100-form-btn m-t-32">
                    <button class="login100-form-btn" type="submit">
                        Giriş Yap
                    </button>

                    <button class="login100-form-btn m-l-10" type="button" onclick="window.location.href='/Uyelik/Kayit'">
                        Kayıt Ol
                    </button>

                </div>

            </form>
        </div>
    </div>
</div>
