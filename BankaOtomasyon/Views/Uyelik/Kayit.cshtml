@model BankaOtomasyon.Models.KayitModel
@{
    /**/
    ViewBag.Title = "Kayit";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="limiter">
    <div class="container-login100" style="background-image: url('/Content/Uyelik/images/bg-01.jpg');">
        <div class="wrap-login100 p-t-30 p-b-50">
            <span class="login100-form-title p-b-41">
                KAYIT OL
            </span>
            <form class="login100-form validate-form p-b-33 p-t-5" action="" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationMessageFor(i => i.Sifre)
                @if (ViewBag.message != null)
                {
                    <div class="wrap-input100 validate-input">
                        @Html.ValidationMessageFor(i => i.TCKN, null, new { @class = "alert alert-danger", role = "alert" })
                        
                    </div>

                }
                <div class="wrap-input100 validate-input" data-validate="TCKN Giriniz">

                    @Html.TextBoxFor(i => i.TCKN, new { @class = "input100", @type = "text", @maxlength = "11", @name = "TCKN", @placeholder = "TCKN ", @onkeypress= "return event.charCode>= 48 &&event.charCode<= 57" })

                    <span class="focus-input100" data-placeholder="&#xe894;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Email Giriniz">

                    @Html.TextBoxFor(i => i.Email, new { @class = "input100", @type = "email", @name = "Email", @placeholder = "Email " })
                    <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Sifre Giriniz">

                    @Html.TextBoxFor(i => i.Sifre, new { @class = "input100", @type = "password", @name = "sifre", @placeholder = "Sifre" })

                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Sifre Onay Giriniz">
                    @Html.TextBoxFor(i => i.SifreOnay, new { @class = "input100", @type = "password", @name = "SifreOnay", @placeholder = "Sifre Onay" })

                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                </div>
                <div class="wrap-input100 validate-input " data-validate="Ad Giriniz">

                    @Html.TextBoxFor(i => i.Ad, new { @class = "input100", @type = "text", @name = "ad", @placeholder = "Ad"})
                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>


                </div>
                <div class="wrap-input100 validate-input" data-validate="Soyad Giriniz">
                    @Html.TextBoxFor(i => i.SoyAd, new { @class = "input100", @type = "text", @name = "soyad", @placeholder = "Soyad"})
                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>-
                </div>
                <div class="wrap-input100 validate-input" data-validate="Telefon Giriniz">
                    @Html.TextBoxFor(i => i.TelefonNo, new { @class = "input100", type = "text", @placeholder = "(555) 555-5555", @autocomplete = "tel", @maxlength = "14", @pattern = "[(][0-9]{3}[)] [0-9]{3}-[0-9]{4}", @name = "phoneNumber", @id = "phone" })

                    <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                </div>

                <div class="container-login100-form-btn m-t-32">
                    <button class="login100-form-btn" type="submit">
                        Kayıt Ol
                    </button>

                </div>

            </form>
        </div>
    </div>
</div>
