@using PagedList.Mvc
@model BankaOtomasyon.Models.CokluModel
@{
    ViewBag.Title = "İslemTablosu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="app-main__outer">
    <div class="app-main__inner">
         
        <div class="">

            <div class="row">
                <div class="col-lg-12">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Virman İslemlerim</h5>

                            <table class="mb-0 table table-striped">

                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Hesap Numarasi</th>
                                        <th>Gonderen Ek Numarasi</th>
                                        <th>Alici Ek Numarasi</th>
                                        <th>Gonderilen Tarih</th>
                                        <th>Gonderilen Bakiye</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.TblVirmans)
                                {

                                    <tbody>
                                        <tr>
                                            <th scope="row"></th>
                                            <td>@item.hesapNumarasi</td>
                                            <td>@item.gonderenEkNumarasi</td>
                                            <td>@item.aliciEkNumarasi</td>
                                            <td>@item.gonderilenTarih</td>
                                            <td>@item.gonderilenbakiye</td>
                                        </tr>

                                    </tbody>


                                }
                            </table>
                            <hr />
                            @Html.PagedListPager(Model.TblVirmans, _sayfaNo => Url.Action("İslemTablosu", "Transfer", new { SayfaNo = _sayfaNo }), new PagedListRenderOptions { LinkToFirstPageFormat = "<< İlk", LinkToPreviousPageFormat = "< Önceki", LinkToNextPageFormat = "Sonraki >", LinkToLastPageFormat = "Son >>" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="main-card mb-3 card">
                        <div class="card-body">
                            <h5 class="card-title">Havale İslemlerim</h5>

                            <table class="mb-0 table table-striped">

                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Gonderen Hesap Numarasi</th>
                                        <th>Gonderen Ek Numarasi</th>
                                        <th>Alici Hesap Numarasi</th>
                                        <th>Alici Ek Numarasi</th>
                                        <th>Havale Tarihi</th>
                                        <th>Gonderilen Bakiye</th>

                                        <th></th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model.TblHavales)
                                {

                                    <tbody>
                                        <tr>
                                            <th scope="row"></th>
                                            <td>@item.havaleGonderenHesapNo</td>
                                            <td>@item.havaleGonderenEkNo</td>
                                            <td>@item.havaleAliciHesapNo</td>
                                            <td>@item.havaleAliciEkNo</td>
                                            <td>@item.havaleTarih</td>
                                            <td>@item.bakiye</td>

                                        </tr>

                                    </tbody>


                                }
                            </table>
                            <hr />
                            @Html.PagedListPager(Model.TblHavales, _sayfaNo => Url.Action("İslemTablosu", "Transfer", new { SayfaNo = _sayfaNo }), new PagedListRenderOptions { LinkToFirstPageFormat = "<< İlk", LinkToPreviousPageFormat = "< Önceki", LinkToNextPageFormat = "Sonraki >", LinkToLastPageFormat = "Son >>" })
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
    
</div>
